{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Changed from 'commonjs' to 'ESNext'
    "lib": ["dom", "es6", "es2017", "es2020"], // Added 'es2020'
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}